# Git Commands
# Add and Commit are used as functions
alias gpo='git push orig'
alias gp='git pull'
alias gs='git status'
alias gd='git-diff'
alias gr='git-reflog'
alias glf='git-ls-files'

# Acad aliases
alias cs351='cd ~/code/cs351'
alias cs331='cd ~/code/cs331'
alias cs370='cd ~/code/cs370'

# Test quick changes to bashrc
alias reload='source ~/.bashrc'
